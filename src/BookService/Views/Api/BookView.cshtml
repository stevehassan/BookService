<table class="table booktable">
    <tr>
        <td><h3>Details for Book {{book.Id}}</h3></td>
        <td></td>
    </tr>
    <tr>
        <td>Title</td>
        <td>{{book.Title}}</td>
    </tr>
    <tr>
        <td>Year</td>
        <td>{{book.Year}}</td>
    </tr>
    <tr>
        <td>Price</td>
        <td>&#163{{book.Price}}</td>
    </tr>
    <tr>
        <td>Author</td>
        <td>{{book.AuthorName}}</td>
    </tr>
    <tr>
        <td>Genre</td>
        <td>{{book.Genre}}</td>
    </tr>
</table>
<div>
    <a class="btn btn-primary" ui-sref="editBook({id:book.Id})">Edit</a>
    <a class="btn btn-success" ui-sref="books">Return</a>
</div>