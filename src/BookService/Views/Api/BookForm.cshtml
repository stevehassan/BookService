<div class="form-group">
    <label for="Title" class="col-sm-2 control-label">Book Title</label>
    <div class="col-sm-10">
        <input type="text" ng-model="book.Title" class="form-control" id="Title" placeholder="Book Title Here" ng-required="true" />
    </div>
</div>
<div class="form-group">
    <label for="Year" class="col-sm-2 control-label">Year</label>
    <div class="col-sm-10">
        <input type="text" ng-model="book.Year" class="form-control" id="Year" placeholder="The year of publication?" ng-required="true" />
    </div>
</div>
<div class="form-group">
    <label for="Price" class="col-sm-2 control-label">Price</label>
    <div class="col-sm-10">
        <input type="text" ng-model="book.Price" class="form-control" id="Price" placeholder="The price of the book?" ng-required="true" />
    </div>
</div>
<div class="form-group">
    <label for="Genre" class="col-sm-2 control-label">Genre</label>
    <div class="col-sm-10">
        <input type="text" ng-model="book.Genre" class="form-control" id="Genre" placeholder="The genre of the book?" />
    </div>
</div>
<div class="form-group">
    <label for="AuthorId" class="col-sm-2 control-label">Author</label>
    <div class="col-sm-10">
        <select ng-model="book.AuthorId" ng-options="author.Id as author.Name for author in authors track by author.Id" ng-required="!AuthorName">
            <option value="">-- {{AuthorName ? "change" : "choose"}} author --</option>
        </select>
        &nbsp; {{AuthorName}}
    </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        @if (User.Identity.IsAuthenticated)
        {
            <input type="submit" class="btn btn-primary" value="Save"/>
        }
        else
        {
            <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Save</a>
        }
        <span>&nbsp;</span>
        <a class="btn btn-success" ui-sref="books">Return</a>
    </div>
</div>
